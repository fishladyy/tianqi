<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yue"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/bt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="+"
            android:textSize="30dp"
            android:background="@color/tou"
            />

        <!--    bt1到ac2-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="城市"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <Button
            android:id="@+id/bt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="S"
            android:textSize="25dp"
            android:background="@color/tou"

            />
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<!--这里放图标-->
    <ImageButton
        android:id="@+id/yunyun"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="15dp"
        android:background="#00000000"
        android:rotationX="4"
        android:src="@drawable/tianqi"
        tools:ignore="SpeakableTextPresentCheck" />
<!--    没有文字会显示报错直接ignore-->

    <TextView
        android:id="@+id/Temp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="16℃"
        android:textColor="@color/white"
        android:textSize="110dp" />

    <TextView
        android:id="@+id/Wearther"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Temp"
        android:gravity="center"
        android:text="小雨 17℃/13℃"
        android:textColor="@color/white"
        android:textSize="30dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="空气良74"
        android:layout_below="@id/Wearther"
        android:textColor="@color/white"
        android:textSize="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="72dp" />

<!--    先把屏幕撑开算了-->
</LinearLayout>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="237dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/little"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:src="@drawable/tianqi" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="5"
                    android:gravity="center_horizontal"
                    android:text="今天 阴转小雨"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="3"
                    android:gravity="center_horizontal"
                    android:text="17℃/13℃"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

            </LinearLayout>


            <Button
                android:id="@+id/bt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:background="@color/col_1"
                android:gravity="center"
                android:text="查看近15日天气"
                android:textSize="20dp"
                />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>